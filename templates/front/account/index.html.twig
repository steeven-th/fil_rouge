{% extends 'base.html.twig' %}

{% block title %}Baby Boom{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block main %}

    <section>
        <h3>{% trans from 'general' %}Edit profile{% endtrans %}</h3>

        {{ form_start(editProfileForm) }}


        <div class="row">
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_parent1Name">{% trans from 'parents' %}First Parent Name{% endtrans %} </label>
                    {{ form_widget(editProfileForm.parent1Name, {attr: {value : userInfos.parent1Name}}) }}
                </div>
            </div>
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_parent2Name">{% trans from 'parents' %}Second Parent Name{% endtrans %} </label>
                    {{ form_widget(editProfileForm.parent2Name, {attr: {value : userInfos.parent2Name}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_tel">{% trans from 'parents' %}Mobile{% endtrans %} </label>
                    {{ form_widget(editProfileForm.tel, {attr: {value : userInfos.tel}}) }}
                </div>
            </div>
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_postalCode">{% trans from 'parents' %}Postal Code{% endtrans %} </label>
                    {{ form_widget(editProfileForm.postalCode, {attr: {value : userInfos.postalCode}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_shareCode">{% trans from 'parents' %}Share Code{% endtrans %} </label>
                    {{ form_widget(editProfileForm.shareCode, {attr: {value : userInfos.shareCode}}) }}
                </div>
            </div>
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_email"
                    >{% trans from 'security' %}Email{% endtrans %} </label>
                    {{ form_widget(editProfileForm.email) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_plainPassword"
                    >{% trans from 'security' %}Password{% endtrans %} </label>
                    {{ form_widget(editProfileForm.plainPassword.first) }}
                </div>
            </div>
            <div class="col">
                <div class="formulaire">
                    <label for="edit_profile_form_plainPasswordControl"
                    >{% trans from 'security' %}Confirm Password{% endtrans %} </label>
                    {{ form_widget(editProfileForm.plainPassword.second) }}
                </div>
            </div>
        </div>


        {% if not editProfileForm.vars.valid %}
            <div class="alert alert-danger">
                {% set formErrors = editProfileForm.vars.errors.form.getErrors(true) %}
                {% if formErrors|length %}
                    <ul>
                        {% for error in formErrors %}
                            <li>{{ error.message|trans({},'security') }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endif %}

        <button type="submit" class="btn btn-primary">ENVOYER</button>
        {{ form_end(editProfileForm) }}

    </section>

{% endblock %}
