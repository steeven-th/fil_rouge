<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.5">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/favicon.png') }}"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/stylefront.css') }}">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/80e9556c50.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="{{ asset('js/jquery.js') }}"></script>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<header>

    {% block header %}

        {{ include('front/common/header.html.twig') }}

    {% endblock %}

</header>

<div id="menu">

    {{ include('front/common/menu.html.twig') }}

</div>

<div id="menu_portrait">

    {{ include('front/common/menu-portrait.html.twig') }}

</div>


<div class="container">
    {% block body %}

        <div class="row">
            <main>

                {% block main %}


                {% endblock %}

            </main>
        </div>

    {% endblock %}
</div>

<footer>

    {% block footer %}

        {{ include('front/common/footer.html.twig') }}

    {% endblock %}

</footer>

</body>
</html>
